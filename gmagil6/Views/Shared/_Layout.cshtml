<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Teletickets :)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Google Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <link rel="stylesheet" href="css/main.css">
    <script src="https://kit.fontawesome.com/37b95c9f7f.js" crossorigin="anonymous"></script>

    <!--Mobile optimization-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<body id="home" class="scrollspy">


    <!--Navbar-->
    <div class="navbar-fixed">
        <nav class="teal">
            <div class="container">
                <div class="nav-wrapper">
                    <a href="#" class="brand-logo">TeleTickets</a>
                    <a href="#" data-target="mobile-nav" class="sidenav-trigger">
                        <i class="material-icons">menu</i>
                    </a>
                    <ul class="right hide-on-med-and-down">
                        <li>
                            <a href="#home">Inicio</a>
                        </li>
                        <li>
                            <a href="#buscar">Buscar</a>
                        </li>
                        <li>
                            <a href="#eventos">Eventos</a>
                        </li>
                        <li>
                            <a href="#nosotros">Nosotros</a>
                        </li>
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>


                    </ul>

                </div>
            </div>
        </nav>
    </div>

    <ul class="sidenav" id="mobile-nav">
        <li>
            <a href="#home">Inicio</a>
        </li>
        <li>
            <a href="#buscar">Buscar</a>
        </li>
        <li>
            <a href="#eventos">Eventos</a>
        </li>
        <li>
            <a href="#nosotros">Nosotros</a>
        </li>
    </ul>

    <!-- Slider -->
    <section class="slider">
        <ul class="slides">
            <li>
                <img src="img/Foto1.jpg">
                <div class="caption left-align">
                    <h2 style="color:black ; font-weight:bold">Tenemos eventos</h2>
                    <h5 style="color:black ; font-weight:bold">Forma parte de los mejores eventos de tu ciudad</h5>
                </div>
            </li>
            <li>
                <img src="img/Foto2.jpg">
                <div class="caption right-align">
                    <h2 style="color:white ; font-weight:bold">Valoraciones</h2>
                    <h5 style="color:white ; font-weight:bold" class="hide-on-small-only">Puedes valorar o ver las opiniones de otros usuarios</h5>
                </div>
            </li>
            <li>
                <img src="img/Foto3.jpg">
                <div class="caption center-align">
                    <h2 style="color:white ; font-weight:bold ; margin-top:5em">Y mucho más...</h2>
                    <h5 style="color:white ; font-weight:bold" class="hide-on-small-only">Ven a visitarnos!</h5>
                </div>
            </li>
        </ul>
    </section>

    <!-- Barra de búsqueda -->
    <section id="buscar" class="section section-search teal darken-1 white-text center scrollspy">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h3>Busca eventos en tu zona</h3>
                    <div class="input-field">
                        <input type="text" class="white grey-text autocomplete" id="autocomplete-input" placeholder="No funciona, ni te molestes ;)">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Cajas de eventos -->
    <section id="eventos" class="section section-icons grey lighten-4 center section-eventos scrollspy">
        <div class="container">
            <div class="row">
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-guitar fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Concierto", "Index", "Conciertoes")</h4>
                        <p>Anímate y escucha la mejor música de la ciudad en directo</p>
                    </div>
                </div>
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-basketball-ball fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Deportes", "Index", "EncuentroDeportivoes")</h4>
                        <p>Ve a los eventos deportivos más importantes de la década</p>
                    </div>
                </div>
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-hiking fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Experiencias", "Index", "Experienciaes")</h4>
                        <p>Ve a los lugares más enriquecedores que jamás encontrarás</p>
                    </div>
                </div>
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-route fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Visita Turística", "Index", "VisitaTuristicaes")</h4>
                        <p>Las obras de teatro más aclamadas por los usuarios y la crítica global</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-landmark fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Museo", "Index", "Museoes")</h4>
                        <p>Si quieres relajarte, ve y disfruta del arte local e internacional</p>
                    </div>
                </div>
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-music fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Musical", "Index", "Musicales")</h4>
                        <p>Los musicales que todo el mundo recuerda y los más contemporáneos</p>
                    </div>
                </div>
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-theater-masks fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Teatro", "Index", "ObraTeatroes")</h4>
                        <p>Las obras de teatro más aclamadas por los usuarios y la crítica global</p>
                    </div>
                </div>
                <div class="col s12 m3">
                    <div class="card-panel">
                        <a href="#" class="teal-text">
                            <i class="fas fa-star-half-alt fa-6x"></i>
                        </a>
                        <h4>@Html.ActionLink("Valoraciones", "Index", "Valoraciones")</h4>
                        <p>Valora un evento o observa las valoraciones de otros usuarios</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    

    <!-- Síguenos -->
    <section class="section section-follow teal darken-2 white-text center">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h4>Sigue a Teletickets</h4>
                    <p>Siguenos en las redes sociales</p>
                    <a href="#" class="white-text">
                        <i class="fab fa-facebook fa-4x"></i>
                    </a>
                    <a href="#" class="white-text">
                        <i class="fab fa-twitter fa-4x"></i>
                    </a>
                    <a href="#" class="white-text">
                        <i class="fab fa-linkedin fa-4x"></i>
                    </a>
                    <a href="#" class="white-text">
                        <i class="fab fa-google-plus fa-4x"></i>
                    </a>
                    <a href="#" class="white-text">
                        <i class="fab fa-pinterest fa-4x"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contacto -->
    <section id="nosotros" class="section section-contact scrollspy">
        <div class="container">
            <div class="row">
                <div class="col s12 m6">
                    <div class="card-panel teal white-text center">
                        <i class="material-icons">email</i>
                        <h5>Contactános por email</h5>
                        <p>
                            Puedes mandarnos tus dudas o opiniones por email. Aunque no lo miramos mucho. La verdad es que nada. Pero bueno, tú inténtalo.
                        </p>
                    </div>
                    <ul class="collection with-header">
                        <li class="collection-header">
                            <h4>Location</h4>
                        </li>
                        <li class="collection-item">Agencia teletubbies</li>
                        <li class="collection-item">Cama de Po, 1ª Litera</li>
                        <li class="collection-item">Grassy floral landscape</li>
                    </ul>
                </div>
                <div class="col s12 m6">
                    <div class="card-panel grey lighten-3">
                        <h5>Por favor rellena este formulario</h5>
                        <div class="input-field">
                            <input type="text" placeholder="Nombre">
                        </div>
                        <div class="input-field">
                            <input type="text" placeholder="Email">
                        </div>
                        <div class="input-field">
                            <input type="text" placeholder="Teléfono">
                        </div>
                        <div class="input-field">
                            <textarea class="materialize-textarea" placeholder="Pon un mensaje inútil"></textarea>
                        </div>
                        <input type="submit" value="Submit" class="btn">
                    </div>
                </div>
            </div>
        </div>
    </section>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Teletickets :)</p>
        </footer>
    </div>

    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>

        // Sidenav
        const sideNav = document.querySelector('.sidenav');
        M.Sidenav.init(sideNav, {});

        // Slider
        const slider = document.querySelector('.slider');
        M.Slider.init(slider, {
            indicators: false,
            height: 500,
            transition: 500,
            interval: 4000
        });

        // Material Boxed
        const mb = document.querySelectorAll('.materialboxed');
        M.Materialbox.init(mb, {});

        // ScrollSpy
        const ss = document.querySelectorAll('.scrollspy');
        M.ScrollSpy.init(ss, {});

    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
